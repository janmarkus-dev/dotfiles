set $mod Mod4
### Output configuration
output * bg ~/wall.jpg fill
### Key bindings
set $lock 'swaymsg exit'
bindswitch --reload --locked lid:on exec $lock

# Basics:
    bindsym $mod+Shift+e exec swaymsg exit    
    bindsym $mod+q kill
    bindsym $mod+d exec /home/janm/.config/sway/wmenu.sh
    floating_modifier $mod normal
    bindsym $mod+Shift+c reload
# Moving around:
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right
# Workspaces:
    bindsym $mod+1 workspace number 1
    bindsym $mod+2 workspace number 2
    bindsym $mod+3 workspace number 3
    bindsym $mod+Shift+1 move container to workspace number 1
    bindsym $mod+Shift+2 move container to workspace number 2
    bindsym $mod+Shift+3 move container to workspace number 3
# Layouts:
    bindsym $mod+b splith
    bindsym $mod+v splitv
    bindsym $mod+f fullscreen
    bindsym $mod+Shift+space floating toggle
    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle
    # Move focus to the parent container
    bindsym $mod+a focus parent
# Resizing containers:
mode "resize" {
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"
# Utilities:
    bindsym --locked XF86AudioMute exec pactl set-sink-mute \@DEFAULT_SINK@ toggle
    bindsym --locked XF86AudioLowerVolume exec pactl set-sink-volume \@DEFAULT_SINK@ -10%
    bindsym --locked XF86AudioRaiseVolume exec pactl set-sink-volume \@DEFAULT_SINK@ +10%
    bindsym --locked XF86AudioMicMute exec pactl set-source-mute \@DEFAULT_SOURCE@ toggle
    bindsym --locked XF86MonBrightnessDown exec brightnessctl set 10%-
    bindsym --locked XF86MonBrightnessUp exec brightnessctl set 10%+
exec_always {
    export $(dbus-launch)
    export XDG_RUNTIME_DIR=/run/user/$(id -u)
    /usr/libexec/pipewire-launcher
}

input 2:7:SynPS/2_Synaptics_TouchPad {
    natural_scroll enabled
    scroll_method edge
    tap enabled
}
input 1133:45119:Logi_M196_Mouse {
 accel_profile "flat"
 pointer_accel -0.6
}

## Material Theme Colors (Dark Scheme)
# Surface colors
set $surface              #14140C
set $surfaceContainer     #202018
set $surfaceContainerHigh #2A2A22
set $surfaceBright        #3A3A31

# Primary colors
set $primary              #C7CC79
set $onPrimary            #303300
set $primaryContainer     #464A02

# Secondary colors
set $secondary            #C8C9A6
set $onSecondary          #303219

# Tertiary colors
set $tertiary             #A3D0C0
set $onTertiary           #08372C

# Text colors
set $onSurface            #E5E3D6
set $onSurfaceVariant     #C9C7B6

# Border and outline colors
set $outline              #929182
set $outlineVariant       #47473B

# Error/warning colors
set $error                #FFB4AB
set $errorContainer       #93000A

# Material Design Window Borders
# Format: border background text indicator child_border
default_border pixel 2
default_floating_border pixel 2
gaps inner 4
gaps outer 1

# Focused window - Primary accent with elevated surface
client.focused          $primaryContainer  $surfaceContainerHigh  $primary  $primary  $primary

# Focused inactive - Subtle outline
client.focused_inactive $surfaceContainer  $surfaceContainer  $onSurfaceVariant  $outlineVariant  $outlineVariant

# Unfocused - Low contrast
client.unfocused        $surface  $surface  $onSurfaceVariant  $outlineVariant  $outline

# Urgent - Error colors for attention
client.urgent           $errorContainer  $error  $onSurface  $error  $error

# Placeholder
client.placeholder      $surface  $surfaceContainer  $onSurfaceVariant  $outlineVariant  $outlineVariant

# Background for non-window areas
client.background       $surface
